<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalypsoUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalypsoUI"
    FlyoutBehavior="Locked"
    FlyoutBackground="#f1f5fb"
    FlyoutWidth="300"
    Shell.NavBarIsVisible="False">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="White"
                  HeightRequest="100">
                <Label Text="CALYPSO"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <Shell.ItemTemplate>
        <DataTemplate>
            <StackLayout>
                <Label Text="{Binding Title}"
                       TextColor="Black"/>
            </StackLayout>
        </DataTemplate>
    </Shell.ItemTemplate>

    <ShellContent Title="Home" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>
    <ShellContent Title="Clienti" Route="Customers" ContentTemplate="{DataTemplate local:Customers}" />
    <ShellContent Title="Abbonamenti" Route="Memberships" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Spiaggia" Route="Beach" ContentTemplate="{DataTemplate local:MainPage}" />
</Shell>
